{
    "defaultSeverity": "error",
    "extends": [
        "tslint-plugin-prettier",
        "tslint-config-prettier",
        "tslint-config-airbnb"
    ],
    "rules": {
        "prettier": ["always", ".prettierrc.js"],
        // added 4-size tabs
        "ter-indent": [true, 4, { "SwitchCase": 1 }],
        // added "allow-pascal-case" for functional components
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ]
    },
    "rulesDirectory": ["tslint-plugin-prettier"]
}
