{
    "defaultSeverity": "error",
    "extends": ["tslint-react", "tslint-eslint-rules", "tslint-config-prettier", "tslint-config-airbnb"],
    "rules": {
        "prettier": ["always", ".prettierrc.js"],
        // added 4-size tabs
        "ter-indent": [true, 4, { "SwitchCase": 1 }],
        // added "allow-pascal-case" for functional components
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
        "max-line-length": [true, 120],
        // import name shouldn't be as filename
        "import-name": false,
        // "strict-bound-class-methods" for arrow functions ; in classes
        "semicolon": [true, "always", "strict-bound-class-methods"]
    },
    "rulesDirectory": ["tslint-plugin-prettier"]
}
