{
    "compilerOptions": {
        "outDir": "./public/scripts",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2018", "dom", "dom.iterable"]
    },
    "include": ["./src/**/*"]
}
